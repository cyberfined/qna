document.querySelector('.answer-errors').innerHTML = "<%= render partial: 'shared/errors', locals: { resource: answer } %>";
<% unless answer.errors.present? %>
    document.querySelector(".edit-answer-form[data-id='<%= answer.id %>']").classList.add("hide");
    document.querySelector(".edit-answer-button[data-id='<%= answer.id %>']").classList.remove("hide");
    document.querySelector(".answer[data-id='<%= answer.id %>'] p").innerHTML = "<%= j answer.body %>";
<% end %>
