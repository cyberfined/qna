document.querySelector('.question-errors').innerHTML = "<%= render partial: 'shared/errors', locals: { resource: question } %>";
<% unless question.errors.present? %>
    document.querySelector(".question-header").innerHTML = "<%= j question.title %>";
    document.querySelector(".question-body").innerHTML = "<%= j question.body %>";
    document.querySelector("#edit-form").classList.add("hide");
    document.querySelector("#edit-button").classList.remove("hide");
<% end %>
